<view>
  <view>{{province}}-{{city}}-{{county}}</view>
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{val}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{provinces}}" wx:key="{{item}}" style="line-height: 50px">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" wx:key="{{item}}" style="line-height: 50px">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" wx:key="{{item}}" style="line-height: 50px">{{item}}</view>
    </picker-view-column>
  </picker-view>
</view>